using Gtk 4.0;
using Adw 1;

template $PreferencesDialog: Adw.PreferencesDialog {
    Adw.PreferencesPage {
        title: "Instance";

        Adw.PreferencesGroup {
            title: "Server";

            Adw.EntryRow url_input {
                title: "Url";
            }
        }

        Adw.PreferencesGroup {
            title: "Authentication";

            Adw.ComboRow mode_input {
                title: "Mode";

                model: Gtk.StringList {
                    strings: ["none", "basic"];
                };
            }

            Adw.EntryRow username_input {
                title: "Username";
            }

            Adw.PasswordEntryRow password_input {
                title: "Password";
            }
        }
    }
}
