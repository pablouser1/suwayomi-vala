using Gtk 4.0;
using Adw 1;

template $MangaPage: Adw.NavigationPage {
    title: "Manga";

    Adw.ToolbarView {
        [top]
        Adw.HeaderBar {}

        Gtk.Box {
            homogeneous: true;
            orientation: horizontal;
            spacing: 10;

            Gtk.Picture thumbnail {}

            Gtk.Box {
                orientation: vertical;
                spacing: 10;

                Gtk.Label title_label {
                    max-width-chars: 100;
                    styles [
                        "title-1",
                    ]
                }

                Gtk.Label description_label {
                    max-width-chars: 100;
                    wrap: true;
                    wrap-mode: word;
                }

                ScrolledWindow {
                    vexpand: true;

                    Gtk.ListBox chapters_box {}
                }
            }
        }
    }
}
